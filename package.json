{
  "name": "crabiner",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "env-cmd -f .env.local node src/server.js",
    "dev:test": "DISABLE_RATE_LIMIT=true env-cmd -f .env.local node src/server.js",
    "db:reset": "psql -U postgres -c 'DROP DATABASE IF EXISTS crabiner;' && psql -U postgres -c 'CREATE DATABASE crabiner;'",
    "db:schema": "psql $DATABASE_URL < db/schema.sql",
    "db:seed": "node db/seed.js",
    "db:setup": "npm run db:reset && npm run db:schema && npm run db:seed",
    "cleanup": "node src/services/cleanupService.js",
    "test": "DISABLE_RATE_LIMIT=true node --test tests/**/*.test.js",
    "test:notifications": "DISABLE_RATE_LIMIT=true node --test tests/notifications.test.js",
    "test:token-auth": "DISABLE_RATE_LIMIT=true node --test tests/token-auth.test.js",
    "test:auth": "DISABLE_RATE_LIMIT=true node --test tests/auth-flow.test.js"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "env-cmd": "^11.0.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "google-auth-library": "^10.5.0",
    "helmet": "^7.1.0",
    "isomorphic-dompurify": "^2.9.0",
    "jsonwebtoken": "^9.0.3",
    "leaflet": "^1.9.4",
    "nanoid": "^5.0.4",
    "node-cron": "^3.0.3",
    "nodemailer": "^7.0.12",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.11.3",
    "react-leaflet": "^5.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}
