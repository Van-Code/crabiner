{
  "name": "crabiner",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "env-cmd -f .env.local node src/server.js",
    "dev:test": "DISABLE_RATE_LIMIT=true env-cmd -f .env.local node src/server.js",
    "db:seed:local": "env-cmd -f .env.local node seed_posts.js",
    "cleanup": "node src/services/cleanupService.js",
    "test": "DISABLE_RATE_LIMIT=true node --test tests/**/*.test.js",
    "test:auth": "DISABLE_RATE_LIMIT=true node --test tests/auth-flow.test.js",
    "test:posts": "DISABLE_RATE_LIMIT=true node --test tests/post-lifecycle.test.js",
    "test:conversations": "DISABLE_RATE_LIMIT=true node --test tests/conversations.test.js",
    "test:inbox": "DISABLE_RATE_LIMIT=true node --test tests/inbox-notifications.test.js",
    "test:ui": "DISABLE_RATE_LIMIT=true node --test tests/ui-validation.test.js",
    "test:legacy": "DISABLE_RATE_LIMIT=true node tests/posts.test.js && DISABLE_RATE_LIMIT=true node --test tests/auth-replies.test.js"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "connect-pg-simple": "^10.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "env-cmd": "^11.0.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "isomorphic-dompurify": "^2.9.0",
    "leaflet": "^1.9.4",
    "nanoid": "^5.0.4",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.11.3",
    "react-leaflet": "^5.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}
